{
    "machine": {
        "host": "$host",
        "username": "$username",
        "password": "$password"
    },
    "commands": [
        "sudo apt-get update",
        "curl -sL https://deb.nodesource.com/setup_7.x | sudo -E bash -",
        "sudo apt-get install -y nodejs",

        "npm --prefix /opt/feature-toggle-service install",
        "docker stop feature-toggle-service",
        "docker rm feature-toggle-service",
        "docker stop feature-toggle-db",
        "docker rm feature-toggle-db",
        "docker build --no-cache -t feature-toggle-service /docker-uploads/feature-toggle-service",
        "docker run --name feature-toggle-db -v /opt/feature-toggle-service/mongodb:/data/db -d mongo",
        "docker run -d -p 8080:3000 --name feature-toggle-service -v /logs:/logs -v /opt/feature-toggle-service:/opt/feature-toggle-service --link feature-toggle-db:mongo -t feature-toggle-service"
    ],
    "directories": [
        {
            "source": "$workspace/dist",
            "destination": "/opt/feature-toggle-service"
        }
    ],
    "files": [
        {
            "source": "$workspace/Dockerfile",
            "destination": "/docker-uploads/feature-toggle-service/Dockerfile"
        }
    ]
}